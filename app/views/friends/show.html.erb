<div class="row">
  <div class="col-md-8 offset-md-2">
    <div class="card shadow">
      <div class="card-header bg-primary text-white">
        <h3 class="mb-0"><%= @friend.first_name %> <%= @friend.last_name %></h3>
      </div>
      <div class="card-body">
        <div class="row mb-3">
          <div class="col-md-6">
            <h5>Contact Information</h5>
            <ul class="list-unstyled">
              <li class="mb-2">
                <strong>üìß Email:</strong><br>
                <% if @friend.email.present? %>
                  <%= mail_to @friend.email, @friend.email, class: "text-primary" %>
                <% else %>
                  <span class="text-muted">Not provided</span>
                <% end %>
              </li>
              <li class="mb-2">
                <strong>üì± Phone:</strong><br>
                <% if @friend.phone.present? %>
                  <%= link_to @friend.phone, "tel:#{@friend.phone}", class: "text-primary" %>
                <% else %>
                  <span class="text-muted">Not provided</span>
                <% end %>
              </li>
            </ul>
          </div>
          <div class="col-md-6">
            <h5>Social Media</h5>
            <ul class="list-unstyled">
              <li class="mb-2">
                <strong>üê¶ Twitter:</strong><br>
                <% if @friend.twitter.present? %>
                  <%= link_to "@#{@friend.twitter}", "https://twitter.com/#{@friend.twitter}", target: "_blank", class: "text-info" %>
                <% else %>
                  <span class="text-muted">Not provided</span>
                <% end %>
              </li>
            </ul>
          </div>
        </div>
      </div>
      <div class="card-footer">
        <div class="btn-group" role="group">
          <%= link_to "Edit", edit_friend_path(@friend), class: "btn btn-warning" %>
          <%= link_to "Back to List", friends_path, class: "btn btn-secondary" %>
          <%= button_to "Delete", @friend, method: :delete, data: { confirm: "Are you sure you want to delete this friend?" }, class: "btn btn-danger" %>
        </div>
      </div>
    </div>
  </div>
</div>
